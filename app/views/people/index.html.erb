<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Forename</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Date of birth</th>
      <th>License type</th>
      <th>Occupation</th>
      <th>Street</th>
      <th>City</th>
      <th>County</th>
      <th>License period</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.title %></td>
        <td><%= person.forename %></td>
        <td><%= person.surname %></td>
        <td><%= person.email %></td>
        <td><%= person.telephone %></td>
        <td><%= person.date_of_birth %></td>
        <td><%= person.license_type %></td>
        <td><%= person.occupation %></td>
        <td><%= person.street %></td>
        <td><%= person.city %></td>
        <td><%= person.county %></td>
        <td><%= person.license_period %></td>
        <td><%= person.postcode %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

